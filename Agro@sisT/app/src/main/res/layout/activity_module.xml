<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sikandaryadav.agrosist.Module">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxHeight="175dp"
        android:minHeight="174dp"
        android:maxWidth="180dp"
        android:minWidth="180dp"
        android:scaleType="fitXY"
        android:layout_toStartOf="@+id/imageButton6"
        android:textAlignment="center"
        android:src="@drawable/users_panel2"
        android:padding="0.5dp"
        android:layout_toLeftOf="@+id/imageButton6" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:maxHeight="175dp"
        android:minHeight="174dp"
        android:maxWidth="180dp"
        android:minWidth="180dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:src="@drawable/weather_icon2"
        android:scaleType="fitXY"
        android:padding="0.5dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:maxHeight="175dp"
        android:minHeight="174dp"
        android:maxWidth="180dp"
        android:minWidth="180dp"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:layout_toStartOf="@+id/imageButton2"
        android:src="@drawable/expert_advice2"
        android:padding="0.5dp"
        android:layout_toLeftOf="@+id/imageButton2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:maxHeight="175dp"
        android:minHeight="174dp"
        android:maxWidth="180dp"
        android:minWidth="180dp"
        android:layout_below="@+id/imageButton2"
        android:layout_toRightOf="@+id/imageButton3"
        android:layout_toEndOf="@+id/imageButton3"
        android:src="@drawable/marketplace2"
        android:scaleType="fitXY"
        android:padding="0.5dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:maxHeight="175dp"
        android:minHeight="174dp"
        android:maxWidth="180dp"
        android:minWidth="180dp"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:src="@drawable/news_icon2"
        android:padding="0.5dp" />

    <ImageButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:maxHeight="175dp"
        android:minHeight="174dp"
        android:maxWidth="180dp"
        android:minWidth="180dp"
        android:layout_below="@+id/imageButton4"
        android:layout_toRightOf="@+id/imageButton5"
        android:layout_toEndOf="@+id/imageButton5"
        android:scaleType="fitXY"
        android:src="@drawable/coordinator2"
        android:padding="0.5dp" />
</RelativeLayout>
